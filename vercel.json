{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "wsgi": {
          "app": "main:app"  # Указываем Flask app
        },
        "includeFiles": "templates/**/*, static/**/*"  # Включаем шаблоны и статику
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"  # Статика
    },
    {
      "src": "/(.*)",
      "dest": "main.py"      # Все запросы → Flask
    }
  ],
  "build": {
    "env": {
      "PYTHON_VERSION": "3.9"
    },
    "installCommand": "pip install -r requirements.txt"  # Ставим зависимости
  }
}